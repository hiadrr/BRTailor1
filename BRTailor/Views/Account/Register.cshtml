@model BRTailor.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




        <div id="login" class="login loginpage col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-offset-0 col-xs-12" style="background-color: #346577;">
            <h1><a href="#" title="Login Page" tabindex="-1">Ultra Admin</a></h1>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <p>
                    <label for="user_login">
                        Email<br />
                        <input type="text" name="Email" id="user_login" class="input" value="" size="20" />

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </label>
                </p>
                <p>
                    <label for="user_login">
                        Password<br />
                        <input type="password" name="Password" id="user_login" class="input" value="" size="20" />

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </label>
                </p>
                <p>
                    <label for="user_login">
                        Confirm Password<br />
                        <input type="password" name="ConfirmPassword" id="user_login" class="input" value="" size="20" />

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </label>
                </p>



                <p>
                    <label for="user_login">
                        Select Role<br />
                        @Html.DropDownList("UserRole", (IEnumerable<SelectListItem>)ViewBag.Name, "Select ...", new {@class="input" })

                    </label>
                </p>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            }

        </div>



@Scripts.Render("~/bundles/jqueryval")

