@model dynamic

@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12">
    <section class="box " id="print">
        <header class="panel_header">
            <h2 class="title pull-left">Invoice</h2>
            <div class="actions panel_actions pull-right">
                <i class="box_toggle fa fa-chevron-down"></i>
                <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                <i class="box_close fa fa-times"></i>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">



                    <!-- start -->

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-md-8 col-sm-8 col-xs-8 invoice-head">
                                <div class="col-md-2 col-sm-12 col-xs-12 invoice-title">
                                    <h2 class="text-center bg-primary ">Invoice</h2>
                                </div>
                                <div class="col-md-7 col-sm-12 col-xs-12 invoice-head-info">
                                    <span class="text-muted">
                                        9 Chah Miran Rd, Makhan Pura Chah Miran<br>
                                        Lahore, Punjab 54900<br>
                                        P:  0322 4356194<br>
                                    </span>
                                </div>
                                <div class="col-md-3 col-sm-12 col-xs-12 invoice-head-info"><span class="text-muted">Invoice ID: @Model.b.Bookin_ID<br>@Model.b.date</span></div>

                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-3 invoice-logo ">
                                <img src="/Content/7877.jpg">


                            </div>
                        </div>
                        <div class="clearfix"></div><br>

                        <div class="col-xs-6 invoice-infoblock pull-left">
                            <h4>Billed To:</h4>
                            <address>
                                <h3>@Model.b.Customer_Name</h3>
                                <span class="text-muted">
                                   @Model.b.Customer_Address<br>
                                   @Model.b.Customer_City<br>@Model.b.Customer_Phone
                                </span>
                            </address>
                        </div>
                        <div class="clearfix"></div><br>

                    </div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h3>Order summary</h3><br>
                            <div class="table-responsive">
                                <table class="table table-hover invoice-table">
                                    <thead>
                                        <tr>
                                            <th><h4>Item</h4></th>
                                            <th class="text-center"><h4>Price</h4></th>
                                            <th class="text-center"><h4>Design Code</h4></th>
                                            <th class="text-right"><h4>Design Price</h4></th>
                                            <th class="text-right"><h4>Sub Total</h4></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.item)
                                        {
                                            <tr>
                                                <td>@item.Measurment_Type</td>
                                                <td class="text-center">@item.Price</td>
                                                <td class="text-center">@item.D_Code</td>
                                                <td class="text-right">@item.D_Price</td>
                                                <td class="text-right">@item.SubTotal</td>
                                            </tr>
                                        }
                                        <tr style="margin-top:10px;">
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line text-center"><h4>Total</h4></td>
                                            <td class="no-line text-right"><h3 style="margin:0px;" class="text-primary">@Model.b.Total</h3></td>
                                               </tr>
                                        <tr>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line text-center"><h4>Discount</h4></td>
                                            <td class="no-line text-right"><h3 style="margin:0px;" class="text-primary">@Model.b.Discount</h3></td>
                                        </tr>
                                        <tr>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                          <td class="no-line text-center"><h4>Payable</h4></td>

                                          <td class="no-line text-right"><h3 style="margin:0px;" class="text-primary">@Model.b.Payable</h3></td>

                                      </tr>
                                           </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div><br>

                    <br>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                            <a onclick="printSection()"  class="btn btn-purple btn-md"><i class="fa fa-print"></i> &nbsp; Print </a>
                           
                        </div>
                    </div>


                    <!-- end -->


                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script>
 function printSection(){
                
     var printsection = document.getElementById("print").innerHTML;
                document.body.innerHTML = printsection;
                window.print();
                
 }
    </script>