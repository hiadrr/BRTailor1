@model IEnumerable<BRTailor.Booking>

@{
    ViewBag.Title = "invoicePrintList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Invoice Record</h2>
            <div class="actions panel_actions pull-right">
                <i class="box_toggle fa fa-chevron-down"></i>
                <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                <i class="box_close fa fa-times"></i>
            </div>

        </header>

        <div class="content-body">
            <table id="example-1" class="table table-striped dt-responsive display dataTable dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="example-1_info" style="width: 100%;">
                <thead>
                    <tr role="row" class="odd">
                        <th class="th-sm">
                            Name
                        </th>

                        <th class="th-sm">
                            Address
                        </th>
                        <th class="th-sm">
                            Phone
                        </th>
                        <th class="th-sm">
                            City
                        </th>
                        <th class="th-sm">
                            Total
                        </th>
                        <th class="th-sm">
                            Discount
                        </th>

                        <th class="th-sm">Print</th>
                    </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr role="row" class="even">

                            <td>
                                @item.Customer_Name
                            </td>

                            <td>
                                @item.Customer_Address

                            </td>
                            <td>
                                @item.Customer_Phone

                            </td>
                            <td>
                                @item.Customer_City

                            </td>
                            <td>
                                @item.Total

                            </td>
                            <td>
                                @item.Discount

                            </td>

                            <td>

                                @Html.ActionLink("Print", "Print", new { id = item.Bookin_ID })|
                                @Html.ActionLink("View", "ViewReport", new { id = item.Bookin_ID })

                            </td>
                        </tr>
                    }

            </table>
        </div>
    </section>
</div>