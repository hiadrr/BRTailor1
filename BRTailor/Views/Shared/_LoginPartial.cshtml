@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()


        <ul class="info-menu right-links list-inline list-unstyled">
            <li class="profile">
                <a href="@Url.Action("Index", "Manage")" data-toggle="dropdown" class="toggle">
                      <img src="~/assets/images/admin-settings-male.png" alt="user-image" class="img-circle img-inline">
                    <span>Hello  @User.Identity.GetUserName()  <i class="fa fa-angle-down"></i></span>
                </a>
                <ul class="dropdown-menu profile animated fadeIn">
                    <li class="last">
                        <a href="javascript:document.getElementById('logoutForm').submit()">
                            <i class="fa fa-lock"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </li>

        </ul>
    }
}


