@model BRTailor.Staff

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-lg-12 col-md-12 col-sm-12" >
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Edit Staff</h2>
            <div class="actions panel_actions pull-right">
                <i class="box_toggle fa fa-chevron-down"></i>
                <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                <i class="box_close fa fa-times"></i>
            </div>
        </header>
        <div class="content-body">
            <div class="row ui-grids">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Staff_ID)
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <section class="panel">
                            <div class="panel-body" >
                                <div class="form-group has-focus">
                                    <label class="form-label" for="field-12">Name</label>
                                   
                                    <div class="controls">
                                        <input type="text" name="Staff_Name" class="form-control" id="field-12" value="@Model.Staff_Name">
                                    </div>
                                </div>
                                 </div>
                        </section>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <section class="panel">
                            <div class="panel-body">
                                <div class="form-group has-focus">
                                    <label class="form-label" for="field-12">Address</label>
                                  
                                    <div class="controls">
                                        <input type="text" name="Staff_Address" class="form-control" id="field-12" value="@Model.Staff_Address">
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <section class="panel">
                            <div class="panel-body">
                                <div class="form-group has-focus">
                                    <label class="form-label" for="field-12">Email</label>

                                    <div class="controls">
                                        <input type="text" name="Staff_Email" class="form-control" id="field-12" value="@Model.Staff_Email">
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <section class="panel">
                            <div class="panel-body">
                                <div class="form-group has-focus">
                                    <label class="form-label" for="field-12">Phone</label>

                                    <div class="controls">
                                        <input type="text" name="Staff_Phone" class="form-control" id="field-12" value="@Model.Staff_Phone">
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <section class="panel">
                            <div class="panel-body">
                                <div class="form-group has-focus">
                                    <label class="form-label"  for="field-12">Cnic</label>

                                    <div class="controls">
                                        <input type="text" name="Staff_CNIC" class="form-control" id="field-12" value="@Model.Staff_CNIC">
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <section class="panel">
                            <div class="panel-body">
                                <div class="form-group has-focus">
                                    <label class="form-label" for="field-12">Position</label>

                                    <div class="controls">
                                        <input type="text" name="Staff_Position" class="form-control" id="field-12" value="@Model.Staff_Position">
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
      
    </section>
    </div>
      
        }

     
