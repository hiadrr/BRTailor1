@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="page-title">

        <div class="pull-left">
            <h1 class="title">BR Tailor's</h1>
        </div>


    </div>
</div>
<div class="clearfix"></div>
<div class="col-lg-12">
    <section class="box nobox">
        <div class="content-body">

            <div class="row">
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left fa fa-male icon-md icon-rounded icon-primary"></i>
                        <div class="stats">
                            <h4><strong> @ViewBag.Customer</strong></h4>
                            <span>Customers</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left fa fa-list-ol icon-md icon-rounded icon-orange"></i>
                        <div class="stats">
                            <h4><strong>@ViewBag.OrdersInQueue</strong></h4>
                            <span>Order's In Queue</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left fa fa-list-alt icon-md icon-rounded icon-purple"></i>
                        <div class="stats">
                            <h4><strong>@ViewBag.OrdersInProcess</strong></h4>
                            <span>Order's In Process</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left fa fa-list-ul icon-md icon-rounded icon-warning"></i>
                        <div class="stats">
                            <h4><strong>@ViewBag.OrdersCompleted</strong></h4>
                            <span>Order's Completed</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left fa fa-outdent icon-md icon-rounded icon-primary"></i>
                        <div class="stats">
                            <h4><strong> @ViewBag.OrdersReceived</strong></h4>
                            <span>Order's Received</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left fa fa-users icon-md icon-rounded icon-orange"></i>
                        <div class="stats">
                            <h4><strong>@ViewBag.staff</strong></h4>
                            <span>Staff</span>
                        </div>
                    </div>
                </div>
                
               
            </div>





            <!-- End .row -->


        </div>
    </section>
</div>