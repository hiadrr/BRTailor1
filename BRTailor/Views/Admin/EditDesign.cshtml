@model BRTailor.Design

@{
    ViewBag.Title = "EditDesign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditDesign</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Design</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Design_ID)

        <div class="form-group">
            <lable class="control-label col-md-2">Design Code</lable>
            <div class="col-md-4">
                @Html.EditorFor(model => model.Design_Code, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Design_Code, "", new { @class = "text-danger" })
            </div>
        </div>

      

        <div class="form-group">
            <lable class="control-label col-md-2">Design Price</lable>
            <div class="col-md-4">
                @Html.EditorFor(model => model.Design_Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Design_Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
